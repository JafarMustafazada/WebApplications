@model PaginationVM

<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item @(Model.HasNext ? "" : "disabled")"><a class="page-link" href="#" tabindex="-1">Previous</a></li>

        @for (int i = 1; i < Model.CurrentPage; i++)
        {
            <li class="page-item"><a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action">@i</a></li>
        }

        <li class="page-item active"><a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action">@Model.CurrentPage</a></li>

        @for (int i = Model.CurrentPage + 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item"><a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action">@i</a></li>
        }

        <li class='page-item @(Model.HasNext ? "" : "disabled")'><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>
